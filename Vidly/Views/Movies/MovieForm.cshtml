@model Vidly.ViewModels.Customers.MovieFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Save", "Movies"))
{
    @Html.ValidationSummary(true, "Please fix the folowing errors.")
    <div class="form-group">
        <label for="Movie_Name">Name</label>
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.Name)
    </div>
    <div class="form-group">
        <label for="Movie_ReleaseDate">Release Date</label>
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:dd/MM/yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.ReleaseDate, "The Release Date field is required.")
    </div>
    <div class="form-group">
        <label for="Movie_MoviGenreType">Genre</label>
        @Html.DropDownListFor(m => m.Movie.MovieGenreTypeId, new SelectList(Model.MovieGenreTypes, "Id", "Name"), "Select Genre...", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.MovieGenreTypeId, "The Genre field is required.")
    </div>
    <div class="form-group">
        <label for="Movie_NumberInStock">Name</label>
        @Html.TextBoxFor(m => m.Movie.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.NumberInStock)
    </div>
    @Html.HiddenFor(m => m.Movie.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

